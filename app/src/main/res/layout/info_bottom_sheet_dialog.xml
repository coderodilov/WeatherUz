<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_style_bottom_sheet_dialog"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:background="@drawable/indicator"
        android:layout_height="30dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="24dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/my_light_primary"
                android:layout_height="90dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgSunRise"
                        android:layout_width="80dp"
                        android:scaleType="centerCrop"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/sunrise"
                        android:layout_height="80dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvSunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgSunRise"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sf_pro_display_thin"
                        android:text="Sunrise"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tvSunRiseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                           android:layout_below="@id/tvSunrise"
                        android:layout_marginTop="12dp"
                           android:gravity="center"
                           android:layout_alignEnd="@id/tvSunrise"
                           android:layout_alignStart="@id/tvSunrise"
                        android:textColor="@color/white"
                           android:fontFamily="@font/sf_pro_display_regular"
                        android:text="12-00"/>


                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardBackgroundColor="@color/my_light_primary"
                android:layout_height="90dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgSunSet"
                        android:layout_width="80dp"
                        android:scaleType="centerCrop"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/sunset"
                        android:layout_height="80dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvSunSet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgSunSet"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sf_pro_display_thin"
                        android:text="Sunset"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvSunSetTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvSunSet"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:layout_alignEnd="@id/tvSunSet"
                        android:layout_alignStart="@id/tvSunSet"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="12-00"/>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/my_light_primary"
                android:layout_height="90dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgMoonRise"
                        android:layout_width="80dp"
                        android:scaleType="centerCrop"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/moonrise"
                        android:layout_height="80dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvMoonRise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgMoonRise"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sf_pro_display_thin"
                        android:text="Moonrise"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvMoonriseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvMoonRise"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:layout_alignEnd="@id/tvMoonRise"
                        android:layout_alignStart="@id/tvMoonRise"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="12-00"/>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardBackgroundColor="@color/my_light_primary"
                android:layout_height="90dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imMoonset"
                        android:layout_width="80dp"
                        android:scaleType="centerCrop"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/moonset"
                        android:layout_height="80dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvMoonset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imMoonset"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sf_pro_display_thin"
                        android:text="Moonset"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvMoonsetTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvMoonset"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:layout_alignEnd="@id/tvMoonset"
                        android:layout_alignStart="@id/tvMoonset"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="12-00"/>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"/>


</LinearLayout>